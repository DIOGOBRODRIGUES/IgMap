<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_custom_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.com.blogspot.dbrtech.igmap.CustomDialog">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvVariavel"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/tx"
        android:layout_alignBottom="@+id/tx"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:textStyle="normal|bold" />

    <TextView
        android:text="Resumo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tx"
        android:fontFamily="sans-serif"
        android:textSize="18sp"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/tvMes"
        android:layout_toEndOf="@+id/tvVariavel"
        android:layout_marginStart="19dp" />

    <Button
        android:text="Ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:id="@+id/button2"


        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_below="@+id/tx"
        android:layout_alignStart="@+id/tx" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvMes"
        android:textSize="18sp"
        android:layout_marginTop="28dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/tx" />

    <TextView
        android:text="MÃªs:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tx"
        android:layout_alignEnd="@+id/tvVariavel"
        android:id="@+id/textView"
        android:textSize="18sp"
        android:textStyle="normal|bold" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher_cometp"
        android:id="@+id/shareButton"

        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_marginStart="26dp"
        android:layout_below="@+id/tvMes"
        android:layout_toEndOf="@+id/button2"
        android:actionProviderClass=
            "android.widget.ShareActionProvider"/>

</RelativeLayout>
